version: '3'
services:
  http1:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DEMO-HTTP-http-node-http-1.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
    networks:
       - demo1
    cap_add:
       - ALL

  http2:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DEMO-HTTP-http-node-http-2.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
    networks:
       - demo1
    cap_add:
       - ALL

  haproxy:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DEMO-HTTP-http-node-haproxy.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
    networks:
       - demo1
    cap_add:
       - ALL

  client:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DEMO-HTTP-http-node-client.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
    networks:
       - demo1
    cap_add:
       - ALL


networks:
  demo1:
      driver: bridge

