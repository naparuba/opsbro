version: '3'
services:
  node1:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DUO2-gossip-connect-x.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
          NODE_NB:  1
    networks:
       - gossip-join
    cap_add:
       - ALL


  node2:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DUO2-gossip-connect-x.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
          NODE_NB:  2
    networks:
       - gossip-join
    cap_add:
       - ALL


  node3:
    build:
       context: ../..
       dockerfile: test/docker-files/docker-file-DUO2-gossip-connect-x.txt
       args:
          MY_PYTHON_VERSION: "${MY_PYTHON_VERSION}"
          NODE_NB:  3
    networks:
       - gossip-join
    cap_add:
       - ALL


networks:
  gossip-join:
      driver: bridge

